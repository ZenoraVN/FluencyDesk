{
  "name": "fluency-desk",
  "version": "1.0.0",
  "description": "FluencyDesk - Desktop Application for Language Learning",
  "main": "dist/presentation/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "build:main": "tsc",
    "build:renderer": "npx webpack --config webpack.config.js",
    "build:preload": "tsc src/infrastructure/electron/preload.ts --outDir dist/infrastructure/electron",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\"",
    "watch:main": "tsc -w",
    "watch:renderer": "npx webpack --config webpack.config.js --watch",
    "dev": "concurrently \"npm run watch\" \"electron .\"",
    "copy-files": "copyfiles -u 1 \"src/presentation/renderer/**/*.{html,css}\" dist/"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.8.1",
    "electron": "^29.1.0",
    "electron-reload": "^1.5.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.99.5",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
